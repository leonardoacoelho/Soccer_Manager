@model SoccerManager.Web.Models.PosicaoVM

@{
    ViewBag.Title = "Editar";
}

<h2>Posição</h2>

<ol class="breadcrumb text-info">
    <li><a href="@Url.Action("Index")">Posições</a></li>
    <li>Editar</li>
</ol>

        <hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-sm-3 col-md-1" })
            <div class="col-sm-3 col-md-2">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Linha, htmlAttributes: new { @class = "control-label col-sm-3 col-md-1" })
            <div class="col-sm-3 col-md-2">
                @Html.EnumDropDownListFor(model => model.Linha, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12 col-sm-6 col-md-3 text-right">
                <input type="submit" value="Confirmar" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div class="alert alert-info text text-right">
    <a href="@Url.Action("Index")"><i class="glyphicon glyphicon-arrow-left"></i> Voltar para a lista</a>
</div>
