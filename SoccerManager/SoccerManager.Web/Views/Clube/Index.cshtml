@model IEnumerable<SoccerManager.Web.Models.ClubeVM>

@{
    ViewBag.Title = "Clubes";
}

<h2>Clubes</h2>

<hr />

<p>
    <a href="@Url.Action("Adicionar")" class="btn btn-success">Adicionar</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sigla)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                <a href="@Url.Action("AddEscudo", new { id = item.Id })" class="btn btn-info">Escudo</a>

                <a href="@Url.Action("Editar", new { id = item.Id })" class="btn btn-primary">Editar</a>

                @if (!item.TemJogadores)
                {
                    <a href="@Url.Action("Remover", new { id = item.Id })" class="btn btn-danger">Remover</a>
                }

                <a href="@Url.Action("Detalhar", new { id = item.Id })" class="btn btn-warning">Detalhar</a>
            </td>
        </tr>
    }

</table>
