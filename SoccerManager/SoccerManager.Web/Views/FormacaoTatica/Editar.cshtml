@model SoccerManager.Web.Models.FormacaoTaticaVM

@{
    ViewBag.Title = "Editar";
}

<h2>Formação Tática</h2>

<ol class="breadcrumb text-info">
    <li><a href="@Url.Action("Index")">Formação Tática</a></li>
    <li>Editar</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.LinhaDefensiva, htmlAttributes: new { @class = "control-label col-sm-3 col-md-2" })
            <div class="col-sm-3 col-md-2">
                @Html.EditorFor(model => model.LinhaDefensiva, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinhaDefensiva, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LinhaCentral, htmlAttributes: new { @class = "control-label col-sm-3 col-md-2" })
            <div class="col-sm-3 col-md-2">
                @Html.EditorFor(model => model.LinhaCentral, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinhaCentral, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LinhaOfensiva, htmlAttributes: new { @class = "control-label col-sm-3 col-md-2" })
            <div class="col-sm-3 col-md-2">
                @Html.EditorFor(model => model.LinhaOfensiva, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinhaOfensiva, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 text-right">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<hr />

<div class="alert alert-info text text-right">
    <a href="@Url.Action("Index")"><i class="glyphicon glyphicon-arrow-left"></i> Voltar para a lista</a>
</div>
